<p id="notice"><%= notice %></p>

<h1>Lista określonych ról w systemie</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Email użytkownika</th>
      <th>Rola</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.email %></td>
        <td><%= role.name %></td>
        <td><%= link_to 'Pokaż szczegóły', role %></td>
        <% if role.name == "administrator" %>
        <td></td>
        <td></td>
        <% else %>
        <td><%= link_to 'Zmień', edit_role_path(role) %></td>
        <td><%= link_to 'Usuń', role, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Określ nową rolę w systemie', new_role_path %>
